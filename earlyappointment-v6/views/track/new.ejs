<%- include('../partials/header') %>


<div class="container">
    
    <form action='/track' method='POST' class="form-horizontal mt-5" >
<fieldset>

<!-- Form Name -->
<legend class="py-4 font-weight-bolder">Check Your Appointment Status</legend>

<!-- Text input-->
  <div class="form-group">
     <label class="col-md-8 control-label" for="Appointment Date">Appointment Date</label>  
    <div class="col-md-8">
       <input id="enteredDate" name="enteredDate" type="date" placeholder="" class="form-control input-md" required="">
    </div>
   </div>

<!-- Button Drop Down -->
<label class="col-md-8 control-label" for="doctorName">Select Your Doctor</label>
<div class="input-group col-md-8 mb-3">
  <select class="custom-select" name="doctorName" id="inputGroupSelect02">
       <option selected disabled  value="  " > Choose Your Doctor</option>    
       <% found.forEach(function(oneDoctor){   %>

     <option  value="<%= oneDoctor.name %>" ><%= oneDoctor.name %></option>    

       <% }) %>

  </select>
</div>




<!-- Text input-->
<div class="form-group">
  <label class="col-md-8 control-label" for="Mobile No.">Mobile No.</label>  
  <div class="col-md-8">
    <input id="mobileNumber" name="mobileNumber" type="text" placeholder="7678971364" class="form-control input-md" required="">
  </div>
</div>
 

<!-- Button -->
<div class="form-group">
  <label class="col-md-8 mr-auto control-label" for="singlebutton"></label>
  <div class="col-md-8">
    <button id="trackYourAppointment" name="track" class="btn btn-primary btn-block">track</button>
  </div>
</div>

</fieldset>
</form>

</div>






<%- include('../partials/footer') %>
